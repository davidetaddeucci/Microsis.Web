@using Syncfusion.Blazor.Navigations

<div class="hero">
    <div class="carousel-overlay"></div>
    <div class="banner-container">
        <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('/images/banner/banner1.jpg')">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 hero-content">
                                <h1>Progettiamo soluzioni tecnologiche avanzate per le sfide di oggi e di domani</h1>
                                <h2>Dal 1999, eccellenza nell'elettronica, software e sistemi di controllo</h2>
                                <div class="d-flex flex-wrap gap-3 mt-4">
                                    <button class="btn btn-primary btn-rounded" @onclick="NavigateToProjects">
                                        I nostri progetti
                                    </button>
                                    <button class="btn btn-outline-primary btn-rounded" @onclick="NavigateToAbout">
                                        Scopri di pi√π
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/images/banner/banner2.jpg')">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 hero-content">
                                <h1>Tecnologie spaziali e sistemi avanzati</h1>
                                <h2>Amplificatori di alta potenza per comunicazioni con lo spazio profondo</h2>
                                <div class="d-flex flex-wrap gap-3 mt-4">
                                    <button class="btn btn-primary btn-rounded" @onclick="NavigateToServices">
                                        I nostri servizi
                                    </button>
                                    <button class="btn btn-outline-primary btn-rounded" @onclick="NavigateToAbout">
                                        Chi siamo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/images/banner/banner3.jpg')">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 hero-content">
                                <h1>Sistemi di monitoraggio e controllo</h1>
                                <h2>Soluzioni innovative per ambito civile, militare e industriale</h2>
                                <div class="d-flex flex-wrap gap-3 mt-4">
                                    <button class="btn btn-primary btn-rounded" @onclick="NavigateToContact">
                                        Contattaci
                                    </button>
                                    <button class="btn btn-outline-primary btn-rounded" @onclick="NavigateToServices">
                                        Scopri i servizi
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private void NavigateToProjects()
    {
        NavigationManager.NavigateTo("/progetti");
    }

    private void NavigateToAbout()
    {
        NavigationManager.NavigateTo("/chi-siamo");
    }

    private void NavigateToServices()
    {
        NavigationManager.NavigateTo("/servizi");
    }

    private void NavigateToContact()
    {
        NavigationManager.NavigateTo("/contatti");
    }
}