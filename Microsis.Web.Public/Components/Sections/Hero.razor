@using Syncfusion.Blazor.Navigations

<section class="hero">
    <div class="banner-carousel-container">
        <SfCarousel @ref="Carousel" 
                    CssClass="hero-carousel"
                    Height="100%" 
                    Width="100%" 
                    AutoPlay="true" 
                    PauseOnHover="true" 
                    ButtonsVisibility="CarouselButtonVisibility.Visible"
                    IntervalTimeout="5000"
                    AnimationEffect="CarouselAnimationEffect.Fade">
     
                <CarouselItem>
                    <div class="carousel-item-content" style="background-image: url('/images/banner/banner1.jpg')">
                        <div class="carousel-overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 hero-content">
                                    <h1>Progettiamo soluzioni tecnologiche avanzate per le sfide di oggi e di domani</h1>
                                    <h2>Dal 1999, eccellenza nell'elettronica, software e sistemi di controllo</h2>
                                    <div class="d-flex flex-wrap gap-3">
                                        <SfButton CssClass="btn btn-primary btn-rounded" OnClick="@NavigateToProjects">
                                            I nostri progetti
                                        </SfButton>
                                        <SfButton CssClass="btn btn-outline-primary btn-rounded" OnClick="@NavigateToAbout">
                                            Scopri di pi√π
                                        </SfButton>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </CarouselItem>
                <CarouselItem>
                    <div class="carousel-item-content" style="background-image: url('/images/banner/banner2.jpg')">
                        <div class="carousel-overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 hero-content">
                                    <h1>Tecnologie spaziali e sistemi avanzati</h1>
                                    <h2>Amplificatori di alta potenza per comunicazioni con lo spazio profondo</h2>
                                    <div class="d-flex flex-wrap gap-3">
                                        <SfButton CssClass="btn btn-primary btn-rounded" OnClick="@NavigateToServices">
                                            I nostri servizi
                                        </SfButton>
                                        <SfButton CssClass="btn btn-outline-primary btn-rounded" OnClick="@NavigateToAbout">
                                            Chi siamo
                                        </SfButton>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </CarouselItem>
                <CarouselItem>
                    <div class="carousel-item-content" style="background-image: url('/images/banner/banner3.jpg')">
                        <div class="carousel-overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 hero-content">
                                    <h1>Sistemi di monitoraggio e controllo</h1>
                                    <h2>Soluzioni innovative per ambito civile, militare e industriale</h2>
                                    <div class="d-flex flex-wrap gap-3">
                                        <SfButton CssClass="btn btn-primary btn-rounded" OnClick="@NavigateToContact">
                                            Contattaci
                                        </SfButton>
                                        <SfButton CssClass="btn btn-outline-primary btn-rounded" OnClick="@NavigateToServices">
                                            Scopri i servizi
                                        </SfButton>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </CarouselItem>
        </SfCarousel>
    </div>
</section>

<style>
    /* Stili specifici del carousel */
    .hero {
        height: 75vh;
        min-height: 500px;
        position: relative;
        margin-top: 0;
        padding-top: 80px;
        overflow: hidden;
    }

    .banner-carousel-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .hero-carousel {
        height: 100%;
    }
    
    .carousel-item-content {
        position: relative;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        height: 75vh;
        min-height: 500px;
        display: flex;
        align-items: center;
    }

    .carousel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0, 58, 104, 0.7), rgba(0, 58, 104, 0.9));
    }

    .hero-content {
        position: relative;
        z-index: 2;
        color: var(--white);
        margin-left: 30px;
    }

    .hero h1 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .hero h2 {
        font-size: 1.8rem;
        font-weight: 400;
        margin-bottom: 2rem;
    }

    /* Sovrascrivere stili Syncfusion */
    ::deep .e-carousel .e-carousel-navigators {
        visibility: visible !important;
    }

    ::deep .e-carousel .e-carousel-indicators {
        bottom: 20px;
    }

    ::deep .e-carousel .e-carousel-indicators .e-carousel-indicator-bar {
        background-color: rgba(255, 255, 255, 0.6);
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin: 0 6px;
    }

    ::deep .e-carousel .e-carousel-indicators .e-carousel-indicator-bar.e-active {
        background-color: white;
    }

    ::deep .e-carousel-arrow-container .e-carousel-arrow {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 50%;
        width: 40px;
        height: 40px;
    }

    ::deep .e-carousel-arrow-container .e-carousel-arrow:hover {
        background-color: rgba(255, 255, 255, 0.5);
    }

    @media (max-width: 992px) {
        .hero h1 {
            font-size: 2.2rem;
        }

        .hero h2 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .hero {
            height: 60vh;
        }
        
        .carousel-item-content {
            height: 60vh;
            text-align: center;
        }

        .hero h1 {
            font-size: 2rem;
        }

        .hero h2 {
            font-size: 1.3rem;
        }
        
        .hero-content {
            margin-left: 0;
        }
    }
</style>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private SfCarousel Carousel { get; set; } = null!;

    private void NavigateToProjects()
    {
        NavigationManager.NavigateTo("/progetti");
    }

    private void NavigateToAbout()
    {
        NavigationManager.NavigateTo("/chi-siamo");
    }

    private void NavigateToServices()
    {
        NavigationManager.NavigateTo("/servizi");
    }

    private void NavigateToContact()
    {
        NavigationManager.NavigateTo("/contatti");
    }
}